<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/unable_grey"
             tools:context="cn.edu.ustc.appseed.clubseed.fragment.StarFragment">

    <cn.edu.ustc.appseed.clubseed.widget.SwipeListView
        android:id="@+id/listViewStars"
        android:footerDividersEnabled="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:descendantFocusability="blocksDescendants" />

    <TextView
        android:id="@+id/listViewNoStar"
        android:text="无收藏"
        android:textSize="32dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</FrameLayout>
