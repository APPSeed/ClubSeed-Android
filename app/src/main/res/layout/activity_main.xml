<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".MainActivity">

    <include layout="@layout/toolbar"/>


    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- activity view -->
        <FrameLayout
            android:id="@+id/fragmentContainer"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <fragment
                android:id="@+id/notice_fragment"
                class="cn.edu.ustc.appseed.clubseed.fragment.SlidingTabsFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <fragment
                android:id="@+id/star_fragment"
                class="cn.edu.ustc.appseed.clubseed.fragment.StarFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <fragment
                android:id="@+id/settings_fragment"
                class="cn.edu.ustc.appseed.clubseed.fragment.SettingFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>

        <!-- navigation drawer -->
            <ListView
                android:id="@+id/drawerList"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:paddingTop="10dp"
                android:minHeight="100dp"
                android:footerDividersEnabled="false"
                android:divider="@null"
                android:focusableInTouchMode="false"
                android:layout_gravity="start"
                android:choiceMode="singleChoice"
                android:background="@color/app_bg"
                android:dividerHeight="0dp"/>

    </android.support.v4.widget.DrawerLayout>

</LinearLayout>